{% extends 'templates/app.twig' %}

{% block content %}

    <div class="row shoppingCart">
        <div class="col-8">
            <h1>Shopping Items</h1>
            {% if basket.itemCount %}
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Product</th>
                            <th scope="col">Price</th>
                            <th scope="col">Qty</th>
                            <th scope="col">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in basket.all %}
                            <tr>
                                <th scope="row">{{ loop.index }}</th>
                                <td>
                                    <a href="{{ path_for('product.get', {url : (item.product_url)}) }}">
                                    {{ item.product_name }}
                                    </a>
                                </td>
                                <td>{{ item.item_price | number_format(2) }}</td>
                                <td>{{ item.qty }}</td>
                                <td>{{ (item.qty * item.item_price) | number_format(2) }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p>You have no items in your cart. <a href="{{ path_for('homepage') }}">Start Shopping</a></p>
            {% endif %}
        </div>
        <div class="col-4">
            {% if basket.itemCount and basket.subTotal %}
                <h2 class="mt-1">Order Summary</h2>
                <table class="table">
                    <tr>
                        <td><strong>Subtotal</strong></td>
                        <td>${{ basket.subTotal | number_format(2) }}</td>
                    </tr>
                    <tr>
                        <td><strong>Shipping</strong></td>
                        <td>${{ basket.shippingFees | number_format(2) }}</td>
                    </tr>
                    <tr class="bg-light">
                        <td><strong>Total</strong></td>
                        <td>${{ basket.total | number_format(2) }}</td>
                    </tr>
                </table>
                 
                <a href="javascript:void(0)" class="btn btn-info">Checkout</a>
            {% endif %}
        </div>
    </div>

{% endblock %}