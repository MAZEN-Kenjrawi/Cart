{% if basket.itemCount and basket.subTotal %}
    <h2 class="mt-1">Order Summary</h2>
    <table class="table">
        <tr>
            <td><strong>Subtotal</strong></td>
            <td>${{ basket.subTotal | number_format(2) }}</td>
        </tr>
        <tr>
            <td><strong>Shipping</strong></td>
            <td>${{ basket.shippingFees | number_format(2) }}</td>
        </tr>
        <tr class="bg-light">
            <td><strong>Total</strong></td>
            <td>${{ basket.total | number_format(2) }}</td>
        </tr>
    </table>
        
    <a href="javascript:void(0)" class="btn btn-info">Checkout</a>
{% endif %}