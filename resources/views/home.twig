{% extends 'templates/app.twig' %}

{% block meta %}
    <title>Slim Application</title>
{% endblock %}

{% block content %}
    <div class="row">
        {% for index, product in products %}
            <div class="col-md-4 mt-3 mb-3">
                {% include 'products/partials/item.twig' with {product: product} %}
            </div>
            {% if (index + 1)  % 3 == 0 %}
                </div>
                <div class="row">
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}